<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar" role="navigation">
      <div class="container">
        <div class="navbar-menu">
          <% if authentication_signed_in? %>
            <li class="navbar-item">
              <%= link_to 'Home', root_path %>
            </li>
            <li class="navbar-item">
              <%= link_to "Create New Post", new_post_path %>
            </li>
          <% else %>
            <li class="navbar-item">
              <%= link_to 'Home', root_path %>
            </li>
          <% end %>
          <span class="navbar-burger burger" data-target="navbarMenuHeroA">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
        <div id="navbarMenuHeroA" class="navbar-menu">
          <div class="navbar-end">
            <% if authentication_signed_in? %>
              <li class="navbar-item">
                <%= link_to "Sign Out", destroy_authentication_session_path, method: :delete  %>
              </li>
            <% else %>
              <li class="navbar-item">
                <%= link_to "Sign Up", new_authentication_registration_path %>
              </li>
              <li class="navbar-item">
                <%= link_to "Sign In", new_authentication_session_path %>
              </li>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
    <% if notice %>
      <%= render 'layouts/alerts' %>
    <% end %>
    <section class="hero is-light is-bold is-medium">
      <!-- Hero head: will stick at the top -->
      <div class="hero-head">

      </div>

      <!-- Hero content: will be in the middle -->
      <div class="hero-body">
        <div class="container has-text-centered">
          <h1 class="title">
            <%= yield :page_title %>
          </h1>
        </div>
      </div>
    </section>

    <%= yield %>
  </body>
</html>
